<UserControl x:Class="WpfApp1.MotherUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AddMother_button" Content="Add Mother" 
               Margin="10,21,105,10"  Click="AddMother_button_Click"   FontSize="23" Height="Auto"  />
        <Button x:Name="RemoveMother_button" Content="Remove Mother" Grid.Row="1"   Margin="10,10,105,22"
                Click="RemoveMother_button_Click"   FontSize="23" Height="Auto"    />
        <Button x:Name="UpdateMother_button" Content="Update Mother"  Grid.Row="2"  
                Margin="10,0,105,32"
                Click="UpdateMother_button_Click" FontSize="23" Height="Auto"   />
    </Grid>
</UserControl>
