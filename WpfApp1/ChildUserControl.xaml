<UserControl x:Class="WpfApp1.ChildUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button  x:Name="AddChild_button" Content="Add child "   Grid.Row="0" 
                 Margin="10,21,119,10" FontSize="23"  
                Height="Auto"  Click="AddChild_button_Click">


        </Button>
       
        <Button  x:Name="RemoveChild_button" Content="Remove Child" Margin="10,10,119,21" 
                 Click="RemoveChild_button_Click" FontSize="23" Visibility="Visible" 
                Height="Auto" Grid.Row="1"/>
        <Button x:Name="UpdateChild_button" Content="Update  Child"  
                Click="UpdataChild_button_Click" FontSize="23" Visibility="Visible" 
              Height="Auto" Margin="10,0,119,31" RenderTransformOrigin="0.512,0.68" Grid.Row="2"/>
       
    </Grid>
</UserControl>
